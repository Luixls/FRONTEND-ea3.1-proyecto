<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="icon" href="/images/uvmlogo.png" type="image/png" />
    <title>Ver Comentarios</title>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><a href="/about">Informaci√≥n</a></li>
          <li><a href="/contacto">Dejar un Comentario...</a></li>
          <li><a href="/comentarios">Ver Comentarios</a></li>
        </ul>
      </nav>
    </header>
    <main class="container">
      <h1>Comentarios</h1>
      <div class="comentarios-container">
        <% if (comentarios.length > 0) { %> <% comentarios.forEach((comentario,
        index) => { %>
        <div class="comentario">
          <h3>Comentario <%= index + 1 %>:</h3>
          <p><strong>Asunto:</strong> <%= comentario.asunto %></p>
          <p><strong>Mensaje:</strong> <%= comentario.mensaje %></p>
        </div>
        <% }); %> <% } else { %>
        <p>No hay comentarios</p>
        <% } %>
      </div>
    </main>
    <footer>
      <p>&copy; 2024B - FRONTEND - UVM</p>
    </footer>
  </body>
</html>
